#include<iostream>
using namespace std;
int main()
{                     // lab 7 Task2 
int hours[10], h, maxIndex=0 ,
maxHours=0;
for(int i =0; i<10; i++){
cout<<"How many Hours u study ; student No "<<( i+1)<<" : \t";
cin>>hours[i];

if (hours[i] > maxHours) {
            maxHours = hours[i];
            maxIndex = i;
        }
        if (hours[i] > maxHours) {
            maxHours = hours[h];
            maxIndex = i;
        }}
cout<<"\n Numbers of hours study by each student";
for (int j=0; j<10; j++){
cout<<" \nStudent No :"<<j+1<<" :"<<hours[j]<<"  hours";
cout<<endl;
}
cout<<" \nStudent  : "<<(maxIndex+1)<<" study the most with\t"<<maxHours<<" Hours"<<endl;
return 0;
}
